#!/usr/bin/env bash

. bash/util
. bash/dotfile_util

# transaction
function tx() {
    . ${1} || {
        echo 1>&2 "[error] ${1} failed"
        exit
    }
}

if [[ "$OSTYPE" == "darwin"* ]]; then
    #tx os/darwin/bootstrap
    #tx homebrew/bootstrap
    tx bash/bootstrap
    #tx os/darwin/postamble
else
    echo 1>&2 "[error] unsupported os-type"
    exit
fi
